@page

@{
    ViewBag.Title = "Login";
    Layout = "_ShowLayout";
}

<article>
    <div class="columns">
        <div class="column col-6 col-md-8 col-sm-12 col-mx-auto">
            <h1>login</h1>
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="form-label" for="username">username</label>
                    <input class="form-input" type="text" id="username" placeholder="username">
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">password</label>
                    <input class="form-input" type="password" id="password" placeholder="password">
                </div>
                <input type="submit" class="btn btn-primary" value="submit">
            </form>
        </div>
    </div>

</article>

<script type="text/javascript" asp-append-version="true" src="~/js/auth.js"></script>