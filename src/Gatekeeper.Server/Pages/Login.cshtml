@page

@{
    ViewBag.Title = "Login";
    ViewBag.AuthType = "login";
    Layout = "_AuthLayout";
}

<form class="form-horizontal" id="auth">
    <div class="form-group">
        <label class="form-label" for="username">username</label>
        <input class="form-input" type="text" id="username" name="username" placeholder="username" required>
    </div>
    <div class="form-group">
        <label class="form-label" for="password">password</label>
        <input class="form-input" pattern=".{8,}" type="password" id="password" name="password" placeholder="password" required>
    </div>
    <input type="submit" class="btn btn-primary mt-2" value="submit">
</form>