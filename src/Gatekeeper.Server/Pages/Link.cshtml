@page

@{
    ViewBag.Title = "Link";
    ViewBag.AuthType = "link";
    Layout = "_AuthLayout";
}

<p>
    the app <span id="app-name">[X]</span> wants to link your account.
</p>
<form class="form-horizontal" id="link">
    <input type="submit" class="btn btn-primary mt-2" value="accept">
    <a class="btn mt-2" id="cancel">cancel</a>
</form>

<script type="text/javascript" asp-append-version="true" src="~/js/link.js"></script>