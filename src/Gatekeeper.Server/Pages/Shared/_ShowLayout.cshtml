@{
    Layout = "_Layout"; // use the main layout as parent
}
<div class="container">
    <div class="columns">
        <div class="col-6 col-md-10 mt-2 p-centered">
            <!-- show error if js is disabled -->
            <noscript>
                <div class="toast toast-error">
                    please enable javascript to use this site
                </div>
            </noscript>
            
            <div class="header-image mt-2 mb-2">
                <img class="p-centered" src="~/img/app.png"/>
            </div>
            @RenderBody()
        </div>
    </div>
</div>